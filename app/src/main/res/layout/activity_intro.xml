<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">


    <ImageView
        android:id="@+id/circle_center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:scaleX="0.1"
        android:scaleY="0.1"
        android:src="@drawable/circle_yellow"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Welcome to Veterondo!"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:soundEffectsEnabled="false"

        android:scaleY="0.5"
        android:scaleX="0.5"
        android:id="@+id/center_dot"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:src="@drawable/circle_yellow"
        android:visibility="gone" />

    <ImageView
        android:soundEffectsEnabled="false"

        android:scaleY="0.5"
        android:scaleX="0.5"
        android:id="@+id/left_dot"

        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@id/center_dot"
        android:src="@drawable/layout"
        android:visibility="gone" />

    <ImageView
        android:soundEffectsEnabled="false"

        android:scaleY="0.5"
        android:scaleX="0.5"
        android:id="@+id/right_dot"

        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/center_dot"
        android:src="@drawable/circle_blue"
        android:visibility="gone" />

    <View
        android:scaleX="1.0"
        android:scaleY="0.1"
        android:visibility="invisible"
        android:layout_marginTop="16dp"
        android:id="@+id/indicator"
        android:layout_width="1dp"
        android:layout_height="64dp"
        android:background="#ffffff"
        android:layout_below="@id/circle_center"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:alpha="0.0"
        android:textSize="18sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="Tap the Weather Dots to generate chords!"

        />

</RelativeLayout>